<!DOCTYPE html>
<html>
  <head>
    <title>Shovell</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% unless flash[:notice].blank? %>
      <div id="notification"><%= flash[:notice] %></div>
    <% end %>
    <%= yield %>
  </body>
</html>
